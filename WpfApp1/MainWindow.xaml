<Window x:Class="PixelArtEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pixel Art Editor" Height="600" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- Barra de herramientas superior -->
		<Border Grid.Row="0" Background="#f0f0f0" Padding="10">
			<StackPanel Orientation="Horizontal">
				<!-- Botón para cambiar tamaño -->
				<Button Content="Tamaño" Padding="10,5" Margin="0,0,10,0" Click="OpenSizeDialog_Click"/>

				<!-- Otros botones -->
				<Button Content="Guardar" Padding="10,5" Margin="0,0,10,0" Click="SaveButton_Click"/>
				<Button Content="Abrir" Padding="10,5" Margin="0,0,10,0" Click="LoadButton_Click"/>
				<Button Content="Borrar" Padding="10,5" Click="ClearButton_Click"/>
			</StackPanel>
		</Border>

		<!-- Área de dibujo -->
		<ScrollViewer Grid.Row="1" Margin="10" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
			<Border x:Name="CanvasBorder" Background="White" Width="512" Height="512">
				<Canvas x:Name="DrawingCanvas" Background="White" Width="512" Height="512">
					<!-- La cuadrícula se generará dinámicamente -->
				</Canvas>
			</Border>
		</ScrollViewer>
	</Grid>
</Window>